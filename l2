#include <iostream>
#include <cstdlib>
#include <ctime>
#include <algorithm>
using namespace std;

// Функция интерполирующего поиска
int interpolSearch(int arr[], int n, int key) {
    int low = 0;
    int high = n - 1;
    
    while (low <= high && key >= arr[low] && key <= arr[high]) {
        if (low == high) {
            if (arr[low] == key) return low;
            return -1;
        }
        
        // Формула интерполяции для определения позиции
        int pos = low + ((double)(high - low) / (arr[high] - arr[low]) * (key - arr[low]));
        
        if (arr[pos] == key) {
            return pos;
        }
        
        if (arr[pos] < key) {
            low = pos + 1;
        }
        else {
            high = pos - 1;
        }
    }
    
    return -1;
}

int main() {
    // Инициализация генератора случайных чисел
    srand(time(NULL));
    
    int size;
    cout << "Введите размер массива: ";
    cin >> size;
    
    // Создание и заполнение массива
    int* arr = new int[size];
    cout << "Исходный массив: ";
    for (int i = 0; i < size; i++) {
        arr[i] = rand() % 101; // Числа от 0 до 100
        cout << arr[i] << " ";
    }
    cout << endl;
    
    // Сортировка массива
    sort(arr, arr + size);
    
    cout << "Отсортированный массив: ";
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    
    int key;
    cout << "Введите число для поиска: ";
    cin >> key;
    
    // Поиск элемента
    int result = interpolSearch(arr, size, key);
    
    // Вывод результата
    if (result != -1) {
        cout << "Число " << key << " найдено на позиции " << result << endl;
    } else {
        cout << "Число " << key << " не найдено" << endl;
    }
    
    delete[] arr;
    return 0;
}