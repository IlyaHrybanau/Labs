//Ex.1
#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    const int rows = 12;
    const int cols = 10;
    int arr[rows][cols];
    
    int start = 1;
    int total = rows * cols;
    
    for (int col = 0; col < cols; col++) {
        if (col % 2 == 0) {
            for (int row = 0; row < rows; row++) {
                if (start <= total) {
                    arr[row][col] = start++;
                }
            }
        } else {
            for (int row = rows - 1; row >= 0; row--) {
                if (start <= total) {
                    matrix[row][col] = start++;
                }
            }
        }
    }
    
    cout << "Результат:" << endl;
    
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            cout << setw(4) << arr[i][j];
        }
        cout << endl;
    }
    
    return 0;
}


//Ex.2
#include <iostream>
#include <cstdlib>  
#include <ctime>    
#include <iomanip>  

int main() {
  setlocale(LC_ALL, ".1251");
  const int n = 10;
  const int m = 5;
  int i, j;
  int arr[n][m];

  for (i = 0; i < n; i++) {
    for (j = 0; j < m; j++) {
      arr[i][j] = rand() % 100;
    }  
  }
    

  for (i = 0; i < n; i++) {
    for (j = 0; j < m; j++) {
      cout << "\t" << arr[i][j];
    }
      
  }
    
  
  return 0;
}

//Ex.3
#include <iostream>
#include <climits>
using namespace std;

int main() {
    int n, m;
    cin >> n >> m;
    int a[n][m];
    
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            cin >> a[i][j];
        }
    }
    
    for (int i = 0; i < n; i++) {
        int min_el = int_max;
        int pos = -1;
        for (int j = 0; j < m; j++) {
            if (a[i][j] % 2 == 0 && a[i][j] < min_el) {
                min_el = a[i][j];
                pos = j;
            }
        }
        if (pos != -1) {
            cout << "Строка " << i << ": " << min_even << " номер " << pos << endl;
        } else {
            cout << "Строка " << i << ": не имеет четных элементов" << endl;
        }
    }
    
    return 0;
}

