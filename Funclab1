#include <iostream>
using namespace std;

int func(int a) {
    return a*a;
}

int main(){
    int side=0;
    cout<< "Введите сторону квадрата: "<<endl;
    cin >> side;
    if (side<=0){
        cout << "Введите правильное значение!" << endl;
    }
    else{
        int square= func(side);
        cout << "Площадь равна " << square;
    }
    
    return 0;
}
