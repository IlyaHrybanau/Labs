#include <iostream>
using namespace std;

int main () {
    int A[20], n;
    int i;
    cout << "введите размер массива"
    <<endl;
    cin >> n;
    cout << "введите элементы массива"
    <<endl;
    for (i=0; i<n; i++)
    cin >> A[i];

    cout<<"Нечётные"<<endl;
    for (i=0; i<n; i++)
    if (i%2==0){
    cout<<A[i]<<endl;
    }
    else {
    continue;
    }
    cout<<"Чётные"<<endl;
    for (i=0; i<n; i++)
    if (i%2!=0){
    cout<<A[i]<<endl;
    }
    else {
    continue;
    }
    return 0;
}


#Ex. 3
#include <iostream>
using namespace std;

int main () {
    int A[31], n;
    int i;
    int min_num=0;
    int min_item=0;
    cout << "Введите количество видов конфет"
    <<endl;
    cin >> n;
    cout << "Введите стоимость конфет" <<endl;
    
    for (i=0; i<n; i++)
    cin >> A[i];

    for (i=0; i<n; i++)
    if (i==0){
        min_item=A[i];
        min_num=i;
        
    }
    else {
        if (min_item==A[i]){
            min_item=A[i];
            min_num=i;
        }
        if (min_item>A[i]){
            min_num=i;
            min_item=A[i];
        }
        
    }
    
    //min_num+=1;
    cout << min_num << endl;
    return 0;
}