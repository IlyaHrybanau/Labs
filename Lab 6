//Ex. 3
#include <iostream>
using namespace std;

int main () {
    int A[31], n;
    int i;
    int min_num=0;
    int min_item=0;
    cout << "Введите количество видов конфет"
    <<endl;
    cin >> n;
    cout << "Введите стоимость конфет" <<endl;
    
    for (i=0; i<n; i++)
    cin >> A[i];

    for (i=0; i<n; i++)
    if (i==0){
        min_item=A[i];
        min_num=i;
        
    }
    else {
        if (min_item==A[i]){
            min_item=A[i];
            min_num=i;
        }
        if (min_item>A[i]){
            min_num=i;
            min_item=A[i];
        }
        
    }
    
    //min_num+=1;
    cout << min_num << endl;
    return 0;
}

//Ex. 4
#include <iostream>
using namespace std;

int main() {
    const int SIZE = 20;
    int arr[SIZE];
    
    for (int i = 0; i < SIZE; i++) {
        arr[i] = i + 1;
    }
    
    cout << "Исходный массив: ";
    for (int i = 0; i < SIZE; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
   
    for (int i = 0; i < 3; i++) {
        int temp = arr[i];

        arr[i] = arr[SIZE - 3 + i];
        
        arr[SIZE - 3 + i] = temp;
    }
    
    cout << "Новый массив: ";
    for (int i = 0; i < SIZE; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    
    return 0;
}

//Ex. 5 
#include <iostream>
using namespace std;

int main() {
    const int MATCHES = 15;
    int scored[MATCHES];
    int missed[MATCHES
    
    for (int i = 0; i < MATCHES; i++) {
        scored[i] = rand() % 100 + 50;
        missed[i] = rand() % 100 + 50;
    }
    
    cout << "Результаты матчей:" << endl;
    cout <<"Матч\tЗабито\tПропущено\tРезультат" << endl;
    int wins = 0, losses = 0, draws = 0;
    
    for (int i = 0; i < MATCHES; i++) {
        cout << (i + 1) << " " << scored[i] << " " << missed[i] << " ";
        
        if (scored[i] > missed[i]) {
            cout << "ВЫИГРЫШ";
            wins++;
        } else if (scored[i] < missed[i]) {
            cout << "ПРОИГРЫШ";
            losses++;
        } else {
            cout << "НИЧЬЯ";
            draws++;
        }
        cout << endl;
    }
    
    cout << "\nОбщая статистика:" << endl;
    cout << "Выигрышей: " << wins << endl;
    cout << "Проигрышей: " << losses << endl;
    cout << "Ничьих: " << draws << endl;
    

    if (wins > losses) {
        cout << "ВЫИГРЫШ";
    } else if (wins < losses) {
        cout << "ПРОИГРЫШ";
    } else {
        cout << "НИЧЬЯ";
    }
    cout << endl;
    
    return 0;
}